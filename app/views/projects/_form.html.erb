<%= form_with(model: @project) do |form| %>
  <div>
    <%= form.label :Title %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :Description %><br>
    <%= form.text_area :description %>
  </div>

    <div>
    <%= form.label :Status %><br>
    <%= form.text_area :status %>
  </div>
  <%if current_user.manager?%>
  <div>
    <%= form.label "Assign QAs" %>
    <%= form.collection_select(:qa_ids, User.where(role: 'qa'), :id, :email, {}, { multiple: true, size: 5 }) %>
  </div>
  <%end%>
<div>
  <%= form.submit "Save Project" %>
  </div>
<% end %>
