<% if user_signed_in? %>
<h1>Projects List</h1>
<table>
    <tr>
    <th>Project Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Actions</th>
    </tr>
    <% @projects.each do |project| %>
    <tr>
        <td><%= link_to project.name,project %> </td>
        <td><%= project.description %> </td>
        <td><%= project.status %></td>
        <td><%= link_to "Delete",project_path(project), data: {
                                               turbo_method: :delete,
                                               turbo_confirm: "Are you sure?",
                                             } %></td>
        <td>
            <%= link_to "Edit", edit_project_path(project) %>
        </td>
    </tr>
      <% end %>
</table>
